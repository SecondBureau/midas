- content_for :body_content_title do
  = @category.title
- content_for :body do
  %section
    %h1 Title
    %p
      = raw @category.title
  %section
    %h1 Description
    %p
      = raw @category.description
- content_for :side_body do
  %aside
    %h2= t('.other')
    %ul#categories
      - @categories.each do |category|
        %li
          = link_to category.title, refinery.midas_category_path(category)
= render '/refinery/content_page'
