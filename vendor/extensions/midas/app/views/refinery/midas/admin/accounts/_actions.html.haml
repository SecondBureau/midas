%ul
  - if ::Refinery::Midas::Admin::AccountsController.searchable?
    %li
      = render '/refinery/admin/search', :url => refinery.midas_admin_accounts_path
  %li
    = link_to t('.create_new'), refinery.new_midas_admin_account_path, |
      :class => "add_icon"                                             |
  - if !searching? && ::Refinery::Midas::Admin::AccountsController.sortable? && ::Refinery::Midas::Account.any?
    %li
      = link_to t('.reorder', :what => "Accounts"), |
        refinery.midas_admin_accounts_path,         |
        :id => "reorder_action",                    |
        :class => "reorder_icon"                    |
      -#
      = link_to t('.reorder_done', :what => "Accounts"), |
        refinery.midas_admin_accounts_path,              |
        :id => "reorder_action_done",                    |
        :style => "display: none;",                      |
        :class => "reorder_icon"                         |
