%tr{:class=>"<%= cycle('even', 'odd') -%>"}
  %td=employee.name
  %td{:style=>'text-align:center'}
    - if employee.foreigner
      %span.status_tag.green
        YES
  %td{:style=>'text-align:center'}
    - if employee.service
      %span.status_tag.green
        YES
  %td
    = link_to refinery_icon_tag("application_edit.png"), refinery.edit_midas_admin_employee_path(employee), :title => t('.edit')
    = link_to(refinery_icon_tag("delete.png"), refinery.midas_admin_employee_path(employee), :class => "cancel confirm-delete", :title => t('.delete'), :confirm => t('message', :scope => 'refinery.admin.delete', :title => employee.category), :method => :delete)

