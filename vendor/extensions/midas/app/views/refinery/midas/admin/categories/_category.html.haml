%li{:class => "clearfix record #{cycle("on", "on-hover")}", :id => dom_id(category)}
  %span.title
    = category.code
    = category.title
    - if Refinery.i18n_enabled? and Refinery::I18n.frontend_locales.many?
      %span.preview
        - category.translations.each do |translation|
          - if translation.title.present?
            = link_to refinery_icon_tag("flags/#{translation.locale}.png", :size => '16x11'), refinery.edit_midas_admin_category_path(category, :switch_locale => translation.locale), :class => 'locale'                                                                       |
  %span.actions
    = link_to refinery_icon_tag("application_go.png"), refinery.midas_category_path(category), |
      :title => t('.view_live_html'),                                                          |
      :target => "_blank"                                                                      |
    -#
    = link_to refinery_icon_tag("application_edit.png"), refinery.edit_midas_admin_category_path(category), |
      :title => t('.edit')                                                                                  |
    -#
    = link_to refinery_icon_tag("delete.png"), refinery.midas_admin_category_path(category), |
      :class => "cancel confirm-delete",                                                     |
      :title => t('.delete'),                                                                |
      :confirm => t('message', :scope => 'refinery.admin.delete', :title => category.title), |
      :method => :delete                                                                     |
