= twitter_bootstrap_form_for [refinery, :midas_admin, @entry] do |f|
  = render '/refinery/admin/error_messages', :object => @entry, :include_object_name => true
  

  %fieldset
    %legend General
    = f.text_field :title
    .clearfix
      %label Category
      .input
        = select_tag("entry[midas_category_id]", option_groups_from_collection_for_select(Refinery::Midas::Category.where(:parent_id => nil).order("title ASC").all, :children, :title, :id, :title, @entry.midas_category_id), :class => 'chzn-select')
    = f.text_field :valid_after, :class => 'datetimepicker', :"data-format" => "yyyy-MM-dd", :add_on => :append do
      %span.add-on
        %i.icon-calendar

  %fieldset
    %legend Amount
    = f.collection_select :midas_account_id, 'Account', Refinery::Midas::Account.all, :id, :title_and_currency, {}, :class => "chzn-select"
    = f.text_field :src_amount, "Amount"


  %fieldset
    %legend Other
    = f.text_field :invoice
    = f.text_field :status
    = f.text_field :cheque
    = f.text_field :acountant_status


  %div{:style=>'clear:both'}
    = render '/refinery/admin/form_actions', :f => f,                                                    |
      :continue_editing => false,                                                                        |
      :delete_title => t('delete', :scope => 'refinery.entries.admin.entries.entry'),                    |
      :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @entry.currency) |
