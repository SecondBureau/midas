= twitter_bootstrap_form_for [refinery, :midas_admin, @entry] do |f|
  = render '/refinery/admin/error_messages', :object => @entry, :include_object_name => true
  

  %fieldset
    %legend General
    = f.text_field :title
    = f.collection_select :midas_category_id, 'Category', Refinery::Midas::Category.all, :id, :title, {:include_blank => false}, :class => 'chzn-select'
    = f.text_field :valid_after, :class => 'datetimepicker', :"data-format" => "yyyy-MM-dd", :add_on => :append do
      %span.add-on
        %i.icon-calendar

  %fieldset
    %legend Amount
    = f.collection_select :midas_account_id, 'Account', Refinery::Midas::Account.all, :id, :title, {}, :class => "chzn-select"
    = f.text_field :src_amount


  %fieldset
    %legend Other
    = f.text_field :invoice
    = f.text_field :status
    = f.text_field :cheque
    = f.text_field :acountant_status


  %div{:style=>'clear:both'}
    = render '/refinery/admin/form_actions', :f => f,                                                    |
      :continue_editing => false,                                                                        |
      :delete_title => t('delete', :scope => 'refinery.entries.admin.entries.entry'),                    |
      :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @entry.currency) |
