<table>
	<tr>
		<th class="cell_border_right">Month</th>
		<% @payment_modes.each do |payment_mode| %>
		<th class="cell_border_right cell_colspan_header" colspan="2"><%=payment_mode.label%></th>
		<% end %>
		<th class="cell_border_left cell_colspan_header" colspan="2">Total</th>
	</tr>
	<tr>
		<th class="cell_border_right"></th>
		<% @payment_modes.each do |payment_mode| %>
		<th class="cell_border_left">Month</th>
		<th class="cell_border_right">Balance</th>
		<% end %>
		<th class="cell_border_left">Month</th>
		<th>Balance</th>
	</tr>
	
	<%
	calculations = Hash.new
	total_year = Hash.new
	year = 0
	
	@tab_months.each do |month, values|
		total_line = 0
		
		if year == 0 
			year = Date.parse(month).year
		elsif year != 0 && year != Date.parse(month).year
			%>	
			<tr class="">
				<td class="cell_border_right cell_money cell_year"><%=year%></td>
				<% @payment_modes.each do |payment_mode| %>
					<td class="cell_border_left cell_money cell_year"><%=total_year[year.to_s+payment_mode.id.to_s].to_f%></td>
					<td class="cell_border_right cell_money cell_year"><%=total_year[(year).to_s+"balance"+payment_mode.id.to_s]%></td>
				<% end %>
				<td class="cell_border_left cell_money cell_year"><%=total_year[(year)]%></td>
				<td class="cell_money cell_year"><%=total_year[(year).to_s+"balance"]%></td>
			<tr>
			<%
			#total_year = Hash.new
			year = Date.parse(month).year
		end
	%>
	<tr>
		<td class="cell_border_right month_cell"><%=Date.parse(month).strftime("%B %Y")%></td>
		<% @payment_modes.each do |payment_mode| %>
			<td class="cell_border_left cell_money">
			<% if values[payment_mode.id].nil? %>
				0.0
				<% total_year[year.to_s+payment_mode.id.to_s] = total_year[year.to_s+payment_mode.id.to_s].to_f + 0 %>
			<% else %>
				<%=values[payment_mode.id].to_f%>
				<%
				total_year[year.to_s+payment_mode.id.to_s] = total_year[year.to_s+payment_mode.id.to_s].to_f + values[payment_mode.id].to_f
				%>
			<% end %>
			<%
			total_line=total_line+values[payment_mode.id].to_f
			%></td>
			<td class="cell_border_right cell_money">
			<% if calculations[payment_mode.id].nil? %>
				0.0
			<% else %>
				<%=calculations[payment_mode.id].to_f%>
			<% end %>
			</td>
			<%
			total_year[(year).to_s+"balance"+payment_mode.id.to_s] = calculations[payment_mode.id].to_f + 0
			calculations[payment_mode.id] = calculations[payment_mode.id].to_f + values[payment_mode.id].to_f
			%>
		<% end %>
		<td class="cell_border_left total_cell cell_money"><%=total_line%>
		<%
		total_year[(year)] = total_year[(year)].to_f + total_line.to_f
		%>
		</td>
		<%
		calculations["total"] = total_line + calculations["total"].to_f
		total_year[(year).to_s+"balance"] = calculations["total"]
		%>
		<td class="total_cell cell_money"><%=calculations["total"]%></td>
	</tr>
	<% end %>
	<tr>
		<td class="cell_border_right cell_money cell_year"><%=year%></td>
		<% @payment_modes.each do |payment_mode| %>
			<td class="cell_border_left cell_money cell_year"><%=total_year[year.to_s+payment_mode.id.to_s].to_f%></td>
			<td class="cell_border_right cell_money cell_year"><%=total_year[(year).to_s+"balance"+payment_mode.id.to_s]%></td>
		<% end %>
		<td class="cell_border_left cell_money cell_year"><%=total_year[(year)]%></td>
		<td class="cell_money cell_year"><%=total_year[(year).to_s+"balance"]%></td>
	<tr>
</table>