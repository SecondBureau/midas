<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div>
  <%= f.email_field :email, :placeholder=>'Email', :class=>'sign_up_email' %></div>

  <div>
  <%= f.password_field :password, :placeholder=>'Password', :class=>'sign_up_password' %></div>
  
  <div><%= f.submit "Sign in", :class=>'sign_up_submit' %></div>

  <% if devise_mapping.rememberable? -%>
    <div style="color:#666"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>
<% end %>
<br><br>
<center>
<%= render "links" %>
</center>